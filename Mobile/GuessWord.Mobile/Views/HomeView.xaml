<?xml version="1.0" encoding="utf-8" ?>
<mvvm:BaseView x:TypeArguments="vm:HomeViewModel"
               xmlns:mvvm="clr-namespace:GuessWord.Mobile.Views;assembly=GuessWord.Mobile"
               xmlns:vm="clr-namespace:GuessWord.Mobile.Application.Home;assembly=GuessWord.Mobile.Application"
               xmlns="http://xamarin.com/schemas/2014/forms"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="GuessWord.Mobile.Views.HomeView">
    <mvvm:BaseView.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button
                Text="Play Game"
                Command="{Binding GoToPlayCommand}"/>

            <Button
                Text="Add new Word"
                Command="{Binding GoToCreateWordCommand}"/>
        </StackLayout>
    </mvvm:BaseView.Content>
</mvvm:BaseView>